<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>


    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = Context.Request.Query["ReturnUrl"] }, FormMethod.Post, true, new { name = "myForm", autocomplete = "off" }))
    {
        <div class="row justify-content-center">
            <!--Grid column-->
            <div class=" mt-5">
                <h1 class="text-center mb-3">Test</h1>
                <div class="input-group mb-3">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <label style="font-size:22px;">帳號：</label>
                    @Html.TextBox("Account", null, new { @class = "form-control" })
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <label style="font-size:22px;">密碼：</label>
                    @Html.Password("pd", null, new { @class = "form-control" })
                </div>
                <div class="input-group ">
                    <button type="submit" class="btn btn-outline-primary form-control">提交</button>
                </div>
                <div style="color:red;">
                    @ViewBag.errMsg
                </div>
            </div>

            <!--Grid column-->
        </div>
    }
</body>
</html>